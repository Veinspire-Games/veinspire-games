---
// MainLayout.astro
import "../styles/global.scss";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props { title?: string; description?: string; }
const { title = "Veinspire Games", description = "Studio site" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <style>
      :root{
        --brand-600:#7A1919;
        --brand-700:#5E1111;
        --paper-0:#fff;
        --ink-900:#0B0B0B;
      }
      /* чёрный фон всего сайта, чтобы нигде не «просвечивало» */
      body{
        min-height:100dvh;
        display:flex;
        flex-direction:column;
        background: var(--ink-900);
        color: var(--paper-0);
      }
      main{ flex: 1 0 auto; } /* без лишних паддингов/маржинов */
    </style>
  </head>

  <body>
    <a id="top"></a>
    <Header />
    <main><slot /></main>
    <Footer />
  </body>
</html>
