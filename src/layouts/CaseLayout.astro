---
import BaseLayout from "@layouts/BaseLayout.astro";
export interface Props{ title:string; excerpt?:string; tags?:string[]; hero?:string }
const { title, excerpt="", tags=[], hero="" }=Astro.props;
---
<BaseLayout title={`${title} — Case Study — Veinspire`} description={excerpt} ogImage={hero||"/og-default.jpg"}>
  <section class="section">
    <div class="container">
      <h1>{title}</h1>
      {excerpt && <p style="max-width:820px;color:var(--ink-200)">{excerpt}</p>}
      {tags.length>0 && <div class="tags">{tags.map(t=><span class="tag">{t}</span>)}</div>}
    </div>
    {hero && <div class="heroimg"><img src={hero} alt={title} loading="lazy" /></div>}
  </section>
  <slot />
</BaseLayout>

<style lang="scss">
.tags{display:flex;gap:10px;flex-wrap:wrap;margin-top:8px}
.tag{border:1px solid #2b2e34;padding:6px 10px;border-radius:999px;color:var(--ink-200)}
.heroimg{margin-top:20px}.heroimg img{width:100%;border-radius:var(--radius-l)}
</style>
