---
export interface Props{ href:string; title:string; excerpt?:string; tags?:string[]; cover?:string }
const { href, title, excerpt="", tags=[], cover="" }=Astro.props;
---
<a class="case card" href={href} data-reveal>
  {cover && <div class="cover"><img src={cover} alt={title} loading="lazy" /></div>}
  <div class="meta">
    <h3>{title}</h3>
    {excerpt && <p class="ex">{excerpt}</p>}
    {tags.length>0 && <div class="tags">{tags.map(t=><span>{t}</span>)}</div>}
  </div>
</a>

<style lang="scss">
.case{display:flex;flex-direction:column;overflow:hidden;border-color:#2B2E34}
.cover img{width:100%;height:200px;object-fit:cover}
.meta{padding:16px}.ex{color:var(--ink-200);margin:6px 0 10px}
.tags{display:flex;gap:8px;flex-wrap:wrap}
.tags span{border:1px solid #2b2e34;border-radius:999px;padding:4px 10px;color:var(--ink-200)}
.case:hover{transform:translateY(-3px);transition:transform var(--dur-xxs) var(--ease)}
</style>
