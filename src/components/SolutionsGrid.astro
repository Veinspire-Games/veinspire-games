---
type Item={title:string;href:string;points:string[]};
const items:Item[]=[
  {title:"Game Development",href:"/solutions/game-development",points:["Full game / Co-Dev","Vertical Slice & Prototyping","LiveOps, DLC, Expansions"]},
  {title:"Technology",href:"/solutions/technology",points:["Porting & Remastering","Performance Optimization","UI/UX, Tools, Multiplayer/Backend/DevOps, Cert & Store"]},
  {title:"Art",href:"/solutions/art",points:["Art Direction • 2D/3D","Characters • Environments","UI/UX • Animation • VFX"]},
  {title:"Trailers & Cinematics",href:"/solutions/trailers-cinematics",points:["Gameplay/CG Trailers","UE5 Sequencer Cutscenes","UA-видео"]},
  {title:"QA",href:"/solutions/qa",points:["Functional/Performance","Automation & Tools","LQA • Dev QA • Certification"]},
  {title:"Training & Simulation",href:"/solutions/training-simulation",points:["VR/AR/Immersive learning","Gamification • Hybrid UX","Geospatial • App Dev"]}
];
---
<section class="section">
  <div class="container">
    <h2 data-reveal>Our Solutions</h2>
    <div class="grid">
      {items.map((it,i)=>(
        <a class="card solution" href={it.href} data-reveal data-stagger={(i%4)+1}>
          <div class="title">{it.title}</div>
          <ul>{it.points.map(p=><li>{p}</li>)}</ul>
          <div class="more">Learn more →</div>
        </a>
      ))}
    </div>
  </div>
</section>

<style lang="scss">
.grid{display:grid;grid-template-columns:repeat(3,minmax(0,1fr));gap:18px;margin-top:16px}
.solution{padding:20px;transition:transform var(--dur-xxs) var(--ease),border-color var(--dur-xxs) var(--ease);border-color:#2B2E34}
.solution:hover{transform:translateY(-4px);border-color:#3a3d44}
.solution .title{font-family:var(--ff-head);font-size:22px;font-weight:700;margin-bottom:10px}
.solution ul{margin:10px 0 18px;padding-left:18px;color:var(--ink-200)}
.solution li{margin:6px 0}.solution .more{color:#fff;opacity:.85}
@media (max-width:980px){.grid{grid-template-columns:1fr 1fr}}
@media (max-width:640px){.grid{grid-template-columns:1fr}}
</style>
